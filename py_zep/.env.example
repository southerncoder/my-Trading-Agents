# Environment variables for Zep Graphiti service
# Copy this file to .env and customize with your values

# OpenAI-compatible configuration (LM Studio or OpenAI)
# If using LM Studio, OPENAI_BASE_URL can be set and API key may be blank.
OPENAI_API_KEY=your-api-key-here
OPENAI_BASE_URL=http://your-lm-studio-host:port/v1
OPENAI_MODEL=your-model-name
# Embedding model (defaults to text-embedding-3-small if unset)
EMBEDDING_MODEL=

# Neo4j configuration
NEO4J_URI=bolt://your-neo4j-host:port
NEO4J_USER=your-username
NEO4J_PASSWORD=your-secure-password

# Service configuration
ZEP_SERVICE_HOST=your-host
ZEP_SERVICE_PORT=your-port
ZEP_SERVICE_DEBUG=false

# Logging
LOG_LEVEL=INFO
# Optional detailed embedder diagnostics (use only for debugging)
ZEP_EMBEDDER_DEBUG=false
ZEP_EMBEDDER_LOG_RAW=false

# Telemetry
GRAPHITI_TELEMETRY_ENABLED=false