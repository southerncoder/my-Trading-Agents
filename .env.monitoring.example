# =====================================
# Production Monitoring Configuration
# =====================================
# Copy this file to .env.monitoring.local and configure for your environment
# This file contains monitoring-specific environment variables

# =====================================
# Core Monitoring Settings
# =====================================
MONITORING_ENABLED=true
MONITORING_PERFORMANCE_ENABLED=true
MONITORING_PERFORMANCE_INTERVAL=30000
MONITORING_ALERTS_ENABLED=true
MONITORING_ANOMALY_DETECTION_ENABLED=true
MONITORING_HEALTH_CHECK_INTERVAL=60000

# =====================================
# Alert Thresholds
# =====================================
MONITORING_SHARPE_THRESHOLD=0.5
MONITORING_DRAWDOWN_THRESHOLD=0.2
MONITORING_VOLATILITY_THRESHOLD=0.3

# Anomaly Detection Configuration
MONITORING_ZSCORE_THRESHOLD=2.0
MONITORING_PERCENTILE_THRESHOLD=95
MONITORING_ROLLING_WINDOW_SIZE=30

# Alert Configuration
MONITORING_ALERT_COOLDOWN=15
MONITORING_MAX_ALERTS_PER_HOUR=10

# =====================================
# Storage Configuration
# =====================================
MONITORING_STORAGE_PERFORMANCE=postgresql
MONITORING_STORAGE_HEALTH=postgresql
MONITORING_STORAGE_ALERTS=postgresql
MONITORING_STORAGE_GRAPH=zep_graphiti

# =====================================
# Production Logging Configuration
# =====================================
PRODUCTION_LOG_LEVEL=info
PRODUCTION_LOG_FORMAT=json
PRODUCTION_LOG_CONSOLE=true
PRODUCTION_LOG_FILE=true
PRODUCTION_LOG_SYSLOG=false
PRODUCTION_LOG_CLOUD=false

# Security Settings
PRODUCTION_LOG_SANITIZE_SECRETS=true
PRODUCTION_LOG_SANITIZE_PII=true
PRODUCTION_LOG_RATE_LIMIT=true
PRODUCTION_LOG_MAX_SIZE=10485760

# Performance Settings
PRODUCTION_LOG_ASYNC=true
PRODUCTION_LOG_BUFFER_SIZE=1000
PRODUCTION_LOG_FLUSH_INTERVAL=5000
PRODUCTION_LOG_SAMPLING=false
PRODUCTION_LOG_SAMPLING_RATE=1.0

# Cloud Logging (choose one provider)
CLOUD_LOGGING_PROVIDER=aws
CLOUD_LOGGING_ENDPOINT=
CLOUD_LOGGING_API_KEY=
CLOUD_LOGGING_REGION=us-east-1
CLOUD_LOG_GROUP=/trading-agents/production
CLOUD_LOG_STREAM=main

# Syslog Configuration
SYSLOG_HOST=localhost
SYSLOG_PORT=514
SYSLOG_PROTOCOL=udp
SYSLOG_FACILITY=local0

# =====================================
# Backup Configuration
# =====================================
BACKUP_ENABLED=true
BACKUP_LOCAL_PATH=./backups
BACKUP_MAX_SIZE=50GB

# Backup Schedule (cron expressions)
BACKUP_SCHEDULE_DATABASE=0 2 * * *
BACKUP_SCHEDULE_LOGS=0 1 * * *
BACKUP_SCHEDULE_CONFIG=0 3 * * 0
BACKUP_SCHEDULE_FULL=0 4 * * 0

# Retention Policies
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4
BACKUP_RETENTION_MONTHLY=12
BACKUP_RETENTION_YEARLY=3

# Backup Options
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false
BACKUP_VERIFICATION=true
BACKUP_PARALLEL_BACKUPS=2
BACKUP_MAX_RETRIES=3

# Cloud Backup - AWS S3
BACKUP_S3_ENABLED=false
BACKUP_S3_BUCKET=trading-agents-backups
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY_ID=
BACKUP_S3_SECRET_ACCESS_KEY=
BACKUP_S3_PREFIX=trading-agents-backups

# Cloud Backup - Azure Blob Storage
BACKUP_AZURE_ENABLED=false
BACKUP_AZURE_CONTAINER=trading-agents-backups
BACKUP_AZURE_ACCOUNT_NAME=
BACKUP_AZURE_ACCOUNT_KEY=
BACKUP_AZURE_PREFIX=trading-agents-backups

# Cloud Backup - Google Cloud Storage
BACKUP_GCP_ENABLED=false
BACKUP_GCP_BUCKET=trading-agents-backups
BACKUP_GCP_PROJECT_ID=
BACKUP_GCP_KEY_FILENAME=
BACKUP_GCP_PREFIX=trading-agents-backups

# =====================================
# Government Data Monitoring
# =====================================
GOVERNMENT_DATA_MONITORING_ENABLED=true
GOVERNMENT_DATA_MONITORING_INTERVAL=60000
GOVERNMENT_DATA_RETENTION_DAYS=30

# SEC API Monitoring
SEC_RATE_LIMIT_REQUESTS_PER_SECOND=10
SEC_RATE_LIMIT_WARNING_THRESHOLD=80
SEC_RATE_LIMIT_CRITICAL_THRESHOLD=95

# FRED API Monitoring
FRED_RATE_LIMIT_REQUESTS_PER_MINUTE=120
FRED_RATE_LIMIT_WARNING_THRESHOLD=80
FRED_RATE_LIMIT_CRITICAL_THRESHOLD=95

# BLS API Monitoring
BLS_RATE_LIMIT_REQUESTS_PER_MINUTE=500
BLS_RATE_LIMIT_WARNING_THRESHOLD=80
BLS_RATE_LIMIT_CRITICAL_THRESHOLD=95

# Census API Monitoring
CENSUS_RATE_LIMIT_REQUESTS_PER_MINUTE=500
CENSUS_RATE_LIMIT_WARNING_THRESHOLD=80
CENSUS_RATE_LIMIT_CRITICAL_THRESHOLD=95

# Health Check Configuration
GOVERNMENT_DATA_HEALTH_CHECKS_ENABLED=true
GOVERNMENT_DATA_HEALTH_CHECK_INTERVAL=300000
GOVERNMENT_DATA_HEALTH_CHECK_TIMEOUT=10000

# Alert Thresholds
GOVERNMENT_DATA_RESPONSE_TIME_THRESHOLD=5000
GOVERNMENT_DATA_ERROR_RATE_THRESHOLD=10
GOVERNMENT_DATA_FRESHNESS_THRESHOLD=24
GOVERNMENT_DATA_COMPLIANCE_THRESHOLD=90

# =====================================
# Dashboard Configuration
# =====================================
DASHBOARD_REFRESH_INTERVAL=30000
DASHBOARD_DATA_RETENTION=30
DASHBOARD_REAL_TIME_ENABLED=true
DASHBOARD_ALERTS_ENABLED=true

# =====================================
# Notification Channels
# =====================================

# Email Notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_FROM=alerts@company.com
ALERT_EMAIL_TO=admin@company.com,oncall@company.com

# Slack Notifications
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#trading-alerts
SLACK_USERNAME=Trading Agents
SLACK_ICON_EMOJI=:warning:

# Webhook Notifications
WEBHOOK_URL=
WEBHOOK_METHOD=POST
WEBHOOK_AUTH_TOKEN=
WEBHOOK_TIMEOUT=10000

# PagerDuty Integration
PAGERDUTY_INTEGRATION_KEY=
PAGERDUTY_SEVERITY=critical

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_TO_NUMBERS=+1234567890,+0987654321

# =====================================
# Security Configuration
# =====================================
MONITORING_ENABLE_ACCESS_LOGGING=true
MONITORING_ENABLE_AUDIT_TRAIL=true
MONITORING_ENCRYPT_SENSITIVE_DATA=true

# API Security
MONITORING_API_KEY=
MONITORING_API_SECRET=
MONITORING_JWT_SECRET=

# =====================================
# Performance Tuning
# =====================================
MONITORING_MAX_CONCURRENT_OPERATIONS=10
MONITORING_QUERY_TIMEOUT=30000
MONITORING_CONNECTION_POOL_SIZE=20
MONITORING_CACHE_TTL=300000

# Memory Management
MONITORING_MAX_MEMORY_USAGE=1073741824
MONITORING_GARBAGE_COLLECTION_INTERVAL=300000

# =====================================
# Development/Testing Settings
# =====================================
# These settings are for development and testing only
# Set to false in production

MONITORING_ENABLE_DEBUG_LOGGING=false
MONITORING_ENABLE_MOCK_DATA=false
MONITORING_ENABLE_TEST_ALERTS=false
MONITORING_SKIP_AUTHENTICATION=false

# =====================================
# Integration Settings
# =====================================

# OpenTelemetry
OTEL_ENABLED=false
OTEL_SERVICE_NAME=trading-agents-monitoring
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1
OTEL_EXPORTER_OTLP_LOGS_ENDPOINT=http://localhost:4318/v1

# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Grafana
GRAFANA_ENABLED=false
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=
GRAFANA_DASHBOARD_ID=

# Datadog
DATADOG_ENABLED=false
DATADOG_API_KEY=
DATADOG_APP_KEY=
DATADOG_SITE=datadoghq.com

# New Relic
NEWRELIC_ENABLED=false
NEWRELIC_LICENSE_KEY=
NEWRELIC_APP_NAME=trading-agents

# =====================================
# Environment-Specific Overrides
# =====================================
# These can be overridden per environment

# Development
# MONITORING_LOG_LEVEL=debug
# MONITORING_PERFORMANCE_INTERVAL=10000
# BACKUP_ENABLED=false

# Staging
# MONITORING_LOG_LEVEL=info
# MONITORING_PERFORMANCE_INTERVAL=30000
# BACKUP_ENABLED=true

# Production
# MONITORING_LOG_LEVEL=warn
# MONITORING_PERFORMANCE_INTERVAL=60000
# BACKUP_ENABLED=true
# PRODUCTION_LOG_CLOUD=true

# =====================================
# Notes
# =====================================
# 1. Copy this file to .env.monitoring.local
# 2. Fill in your actual values (remove placeholder values)
# 3. Never commit .env.monitoring.local to version control
# 4. Use Docker secrets for sensitive values in production
# 5. Test your configuration before deploying to production
# 6. Monitor the monitoring system itself for health
# 7. Regularly review and update alert thresholds
# 8. Keep backup credentials secure and test recovery procedures