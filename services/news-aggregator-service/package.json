{
  "name": "news-aggregator-service",
  "version": "1.0.0",
  "description": "Unified news aggregation service combining multiple news providers with intelligent fallback",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test:manual:bing": "node tests/manual/bing-news.manual.test.js",
    "test:manual:brave-config": "node tests/manual/brave-config.manual.test.js",
    "test:manual:providers": "node tests/manual/all-providers.manual.test.js",
    "test:manual:all": "npm run test:manual:bing && npm run test:manual:brave-config && npm run test:manual:providers"
  },
  "keywords": [
    "news",
    "aggregation",
    "api",
    "finance",
    "trading",
    "google-news",
    "yahoo-finance",
    "bing-news",
    "newsapi"
  ],
  "author": "TradingAgents",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "axios": "^1.6.2",
    "newsapi": "^2.4.1",
    "yahoo-finance2": "^2.0.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "node-cache": "^5.1.2",
    "@tavily/core": "^0.5.12"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.53.0",
    "supertest": "^6.3.3",
    "@jest/globals": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}